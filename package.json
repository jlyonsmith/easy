{
  "name": "snap-tool",
  "version": "2.5.1",
  "description": "A tool to make multi-package project management a snap!",
  "bin": {
    "snap": "dist/snap.js"
  },
  "files": [
    "dist/**"
  ],
  "scripts": {
    "build": "babel src -d dist -s --ignore **/*.test.js",
    "debug:snap": "babel-node --inspect-brk src/snap.js",
    "test": "jest",
    "test:debug": "babel-node --inspect-brk ./node_modules/jest/bin/jest.js --runInBand",
    "deploy": "npm publish"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "node_modules/",
      "scratch/"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jlyonsmith/snap-tool.git"
  },
  "keywords": [
    "package",
    "project",
    "build",
    "release",
    "test",
    "start"
  ],
  "author": "John Lyon-Smith",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jlyonsmith/snap-tool/issues"
  },
  "homepage": "https://github.com/jlyonsmith/snap-tool#readme",
  "devDependencies": {
    "@babel/cli": "^7.1.5",
    "@babel/core": "^7.1.5",
    "@babel/node": "^7.0.0",
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/plugin-proposal-optional-chaining": "^7.0.0",
    "@babel/plugin-syntax-object-rest-spread": "^7.0.0",
    "@babel/preset-env": "^7.1.5",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^23.6.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "jest-cli": "^23.6.0"
  },
  "dependencies": {
    "chalk": "^2.2.0",
    "command-exists": "^1.2.7",
    "fs-extra": "^4.0.2",
    "glob": "^7.1.2",
    "minimist": "^1.2.0",
    "readline-sync": "^1.4.9",
    "tmp": "0.0.33",
    "toposort": "^1.0.6"
  }
}
