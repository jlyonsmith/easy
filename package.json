{
  "name": "snap-tool",
  "version": "1.0.0",
  "description": "A tool to make multi-package project management a snap!",
  "bin": {
    "snap": "dist/snap-cli.js"
  },
  "scripts": {
    "build": "babel src -d dist -s --ignore *.test.js",
    "release:patch": "snap --patch",
    "debug:snap": "babel-node --inspect-brk src/snap-cli.js",
    "test": "jest"
  },
  "keywords": [
    "package",
    "project",
    "build",
    "release",
    "test",
    "start"
  ],
  "author": "John Lyon-Smith",
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-core": "^6.26.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-preset-env": "^1.6.0",
    "jest": "^21.2.1"
  },
  "dependencies": {
    "chalk": "^2.1.0",
    "command-exists": "^1.2.2",
    "fs-extra": "^4.0.2",
    "glob": "^7.1.2",
    "minimist": "^1.2.0",
    "tempy": "^0.2.1",
    "toposort": "^1.0.6"
  }
}
