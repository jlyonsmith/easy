{
  "name": "@johnls/easy",
  "private": false,
  "version": "4.1.0",
  "description": "A tool to make package project management easy!",
  "bin": {
    "easy": "dist/easy.js"
  },
  "files": [
    "dist/**"
  ],
  "scripts": {
    "build": "rm -rf dist/* && babel src -d dist -s --ignore **/*.test.js",
    "debug:easy": "babel-node --inspect-brk src/easy.js",
    "test": "jest --coverage",
    "test:debug": "babel-node --inspect-brk ./node_modules/jest/bin/jest.js --runInBand",
    "deploy": "npm publish --access public"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "node_modules/",
      "scratch/"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jlyonsmith/easy.git"
  },
  "keywords": [
    "package",
    "project",
    "build",
    "release",
    "test",
    "start"
  ],
  "author": "John Lyon-Smith",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jlyonsmith/easy/issues"
  },
  "homepage": "https://github.com/jlyonsmith/easy#readme",
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/node": "^7.2.2",
    "@babel/plugin-proposal-class-properties": "^7.3.0",
    "@babel/plugin-proposal-decorators": "^7.3.0",
    "@babel/plugin-proposal-optional-chaining": "^7.2.0",
    "@babel/plugin-syntax-object-rest-spread": "^7.2.0",
    "@babel/preset-env": "^7.3.1",
    "jest-cli": "^24.1.0"
  },
  "dependencies": {
    "chalk": "^2.4.2",
    "command-exists": "^1.2.8",
    "fs-extra": "^7.0.1",
    "glob": "^7.1.3",
    "minimist": "^1.2.0",
    "readline-sync": "^1.4.9",
    "tmp": "0.0.33",
    "toposort": "^2.0.2"
  }
}
